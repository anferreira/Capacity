<Window x:Class="HotListReports.Windows.Labour.LTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        xmlns:local="clr-namespace:HotListReports.Windows.Machines"
        mc:Ignorable="d"
        Title="Labour Views" Height="700" Width="1200" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="185*"/>
            <RowDefinition Height="455*"/>
            <RowDefinition Height="29*"/>
        </Grid.RowDefinitions>

        <ListView x:Name="testListView" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin">

        </ListView>

        <Canvas Grid.Row="2" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin">
            <Button Name="checkButt" Content="Check" Click="checkButt_Click" Width="60" Height="19"/>

        </Canvas>
    </Grid>
</Window>
