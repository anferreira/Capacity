<Window x:Class="HotListReports.Windows.Util.Message.CustomMessageBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotListReports.Windows.Util.Message"
        mc:Ignorable="d"
        Title="Message" Height="150" Width="500" Loaded="Window_Loaded">

    <Grid Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="90*"/>
            <RowDefinition Height="29*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBox Name="msgTextBox" AcceptsReturn="True" IsEnabled="False"/>
        </Grid>

        <Canvas x:Name="bottomCanvas" Grid.Row="1" d:LayoutOverrides="LeftMargin, RightMargin, TopMargin, BottomMargin" >
            <Button x:Name="okButton" Content="OK" HorizontalAlignment="Left" Width="75" Click="okButton_Click"  FontWeight="Bold" />
        </Canvas>

    </Grid>
</Window>
